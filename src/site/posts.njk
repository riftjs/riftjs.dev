---
controller: posts.controller.ts
layout: layouts/page.njk
---
<div class="text-center max-w-xl">
    <h1 class="text-4xl font-bold mb-8">📝 Posts</h1>

    {% for post in posts %}
    <article class="mb-10">
        <h2 class="text-2xl font-semibold text-blue-400 hover:underline">
            <a href="{{ post.url }}">{{ post.title }}</a>
        </h2>
        <p class="text-sm text-gray-500 mb-2">Posted on {{ post.date | date }}</p>
        <p class="text-gray-300">{{ post.content | safe }}</p>
    </article>
    {% endfor %}


</div>
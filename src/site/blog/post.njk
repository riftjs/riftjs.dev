---
controller: post.controller.ts
layout: layouts/page.njk
---

<section class="relative w-full h-96 bg-zinc-900 border-b border-zinc-800">
    {% if post.image %}
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('{{ post.image }}');"></div>
    <div class="absolute inset-0 bg-black/60"></div>
    {% else %}
    <div class="absolute inset-0 bg-gradient-to-r from-zinc-900 via-zinc-800 to-zinc-900"></div>
    {% endif %}

    <div class="relative z-10 max-w-4xl mx-auto px-6 h-full flex flex-col justify-center">
        <div class="mb-4 flex items-center gap-3">
            <p class="text-sm text-gray-300">{{ post.date | date("MMMM D, YYYY") }}</p>
            {% if post.featured %}
            <span class="text-xs bg-blue-600 text-white font-semibold px-2 py-1 rounded">FEATURED</span>
            {% endif %}
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">{{ post.title }}</h1>
        {% if post.tags %}
        <div class="flex flex-wrap gap-2">
            {% for tag in post.tags %}
            <span class="bg-zinc-800 border border-zinc-600 text-sm px-3 py-1 rounded-full">#{{ tag }}</span>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</section>


<section class="bg-zinc-900 text-white pb-20">
    <div class="max-w-3xl mx-auto px-6 py-12">
        <h1 class="text-4xl font-bold text-white mb-6">{{ post.title }}</h1>

        <div class="prose prose-invert max-w-none">
            {{ post.content | markdown }}
        </div>
    </div>
</section>

<section class="bg-zinc-800 text-white py-16 border-t border-zinc-700">
    <div class="max-w-3xl mx-auto px-6 text-center">
        <h2 class="text-2xl font-bold mb-4">Build Your Own Blog with Rift</h2>
        <p class="text-gray-300 mb-6">Rift is a zero-guesswork static site generator built for developers. Try it today:
        </p>
        <code class="bg-zinc-700 text-blue-400 px-4 py-2 rounded inline-block">npm create rift@latest</code>
    </div>
</section>
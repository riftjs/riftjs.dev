<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rift â€“ Static Site Generator</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    typography: {
                        invert: {
                            css: {
                                color: '#e5e7eb',
                                a: { color: '#60a5fa' },
                                strong: { color: '#fff' },
                                'ul > li::before': { backgroundColor: '#4b5563' },
                                code: { color: '#93c5fd' },
                                blockquote: { borderLeftColor: '#4b5563' }
                            }
                        }
                    }
                }
            },
            plugins: [tailwindcss.typography]
        }
    </script>
    <script src="https://cdn.tailwindcss.com?plugins=typography"></script>


    <!-- Prism.js for syntax highlighting -->
    <link href="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/themes/prism-tomorrow.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/prism.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/components/prism-typescript.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/components/prism-json.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/components/prism-html.min.js"></script>
    <style>
        @keyframes wave {
            0% {
                transform: translateX(0)
            }

            50% {
                transform: translateX(-50%)
            }

            100% {
                transform: translateX(0)
            }
        }

        @keyframes typing {
            from {
                width: 0
            }

            to {
                width: 100%
            }
        }

        @keyframes blink {
            50% {
                border-color: transparent
            }
        }

        .typing {
            white-space: nowrap;
            overflow: hidden;
            border-right: .15em solid #3b82f6;
            animation:
                typing 3.5s steps(40, end),
                blink .75s step-end infinite;
        }

        /* Optional: Make Prism code blocks fit your style */
        code[class*="language-"] {
            font-size: 0.95em;
            border-radius: 0.375rem;
            background: none;
        }

        pre[class*="language-"] {
            background: none;
            padding: 0;
            margin: 0;
        }

        pre[class*="language-"] {
            background-color: #1e293b;
            /* Tailwind zinc-900 */
            padding: 1.25rem;
            margin-top: 1.5rem;
            margin-bottom: 1.5rem;
            border-radius: 0.5rem;
            overflow-x: auto;
            font-size: 0.875rem;
            line-height: 1.6;
        }

        code[class*="language-"] {
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace;
            color: #e2e8f0;
            /* Tailwind slate-200 */
            background: none;
        }
    </style>
</head>
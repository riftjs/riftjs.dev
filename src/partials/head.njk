    <style>
        @keyframes wave {
            0% {
                transform: translateX(0)
            }

            50% {
                transform: translateX(-50%)
            }

            100% {
                transform: translateX(0)
            }
        }

        @keyframes typing {
            from {
                width: 0
            }

            to {
                width: 100%
            }
        }

        @keyframes blink {
            50% {
                border-color: transparent
            }
        }

        .typing {
            white-space: nowrap;
            overflow: hidden;
            border-right: .15em solid #3b82f6;
            animation:
                typing 3.5s steps(40, end),
                blink .75s step-end infinite;
        }

        /* Optional: Make Prism code blocks fit your style */

<script>
// Highlight sidebar nav link based on current hash
(function() {
  const links = document.querySelectorAll('nav a[href^="/docs/#"], nav a[href^="/docs/"]');
  const hash = decodeURIComponent(window.location.hash);
  const path = window.location.pathname;
  links.forEach(link => {
    link.classList.remove('text-blue-500', 'bg-zinc-900', 'font-bold');
    if ((hash && link.getAttribute('href').endsWith(hash)) || link.getAttribute('href') === path + hash) {
      link.classList.add('text-blue-500', 'bg-zinc-900', 'font-bold');
    }
  });
  window.addEventListener('hashchange', () => {
    const newHash = decodeURIComponent(window.location.hash);
    links.forEach(link => {
      link.classList.remove('text-blue-500', 'bg-zinc-900', 'font-bold');
      if ((newHash && link.getAttribute('href').endsWith(newHash)) || link.getAttribute('href') === path + newHash) {
        link.classList.add('text-blue-500', 'bg-zinc-900', 'font-bold');
      }
    });
  });
})();
</script>
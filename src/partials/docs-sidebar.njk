<script>
// Highlight sidebar nav link based on current hash
(function() {
  const links = document.querySelectorAll('nav a[href^="/docs/#"]');
  const hash = decodeURIComponent(window.location.hash);
  links.forEach(link => {
    // Remove any previous highlight
    link.classList.remove('text-blue-500', 'bg-zinc-900', 'font-bold');
    // If the link's href ends with the current hash, highlight it
    if (hash && link.getAttribute('href').endsWith(hash)) {
      link.classList.add('text-blue-500', 'bg-zinc-900', 'font-bold');
    }
  });

  // Listen for hash changes
  window.addEventListener('hashchange', () => {
    const newHash = decodeURIComponent(window.location.hash);
    links.forEach(link => {
      link.classList.remove('text-blue-500', 'bg-zinc-900', 'font-bold');
      if (newHash && link.getAttribute('href').endsWith(newHash)) {
        link.classList.add('text-blue-500', 'bg-zinc-900', 'font-bold');
      }
    });
  });
})();
</script>